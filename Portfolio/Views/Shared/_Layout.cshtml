<!DOCTYPE html>

<html>
<head>
    <title>@(ViewBag.Title ?? "Web Application Development | Daniel Poindexter")</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css">
    <link href="@Url.Content("~/content/main.css")" rel="stylesheet" type="text/css"/>
    @RenderSection("styles", required: false)
</head>
<body>
    <section id="content" class="container_16">
        <header class="grid_16">
            <a href="@Url.Action("Index","Work")" class="grid_4">
                <img src="@Url.Content("~/img/elements/poindexter.png")" alt="POINDEXTER"/>
            </a>
            <div class="grid_4">&nbsp;</div>
            <section id="about" class="grid_8">I’m Daniel Poindexter, a web application generalist in Houston. I do database, code, user interface, front-end development and visual design. <a data-controls-modal="contact-modal" data-backdrop="static">Get in touch with me.</a></section>
        </header>
            <nav class="grid_4">
            @{
                Html.RenderPartial("_Nav");      
            }
            </nav>
            <article id="main">
                @RenderSection("article")
            </article>
        <footer class="grid_16">
            @RenderSection("footer", required: false)
        </footer>
    </section>

    @{
        Html.RenderPartial("_ContactForm");
    }

    <!--Javascript: jQuery, jQuery UI, Underscore, Knockout-->
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/underscore-min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-modal.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/knockout-2.0.0.debug.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var IMGPATH = '@Url.Content("~/img/")';
    </script>
    @RenderSection("scripts", required: false)
    @RenderSection("templates", required: false)
</body>
</html>
